                             if(data['result']==true){
                	            alert('帐号成功退出！');
                             }else{
                	         alert('退出失败');
                             }
                          }
	           });
   delCookie("UserName");
   delCookie("globalUniqueID");
   $("#loginfo").remove();
   $("#loginicon").show();
}

