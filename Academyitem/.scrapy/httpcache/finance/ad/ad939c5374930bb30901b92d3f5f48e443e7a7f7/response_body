<script>
(function($){
    // var search = {
    //     // 不设置category_id会出错
    //     tpl_file    : 'paper',
    //     title       :  '',
    //     pagesize    : 9,
    //     category_id : "41",
    // };
    // refrush("/searchs/paper.html", search);
    $('#btn_paper').click(function(){
        var value = $('#search_paper').val();
        if(value == ''){
            my_alert("请输入搜索关键字");
            return false;
        }
        if( $('.paper_list1 .option .s1').hasClass("act") ){
            var search = {
                // 不设置category_id会出错
                tpl_file    : 'paper',
                title       : value,
                pagesize    : 9,
                radios      : 1,
                category_id : "41",
            };
        }else{
            var search = {
                // 不设置category_id会出错
                tpl_file    : 'paper',
                title       : value,
                pagesize    : 9,
                category_id : "41",
            };
        }
        refrush("/searchs/paper.html", search);    
       
    });
 
    //回车搜索
    $(".justify input").keyup(function(e){
        if(e.keyCode === 13){
            $('#btn_paper').click();
        }
    });
    $(".paper_list1 .option .s1").bind("click",function(){
        $(this).toggleClass("act");
        var value = $('#search_paper').val();
        if( $(this).hasClass("act") ){
            var search = {
                // 不设置category_id会出错
                tpl_file    : 'paper',
                radios      : 1,
                title       : value,
                pagesize    : 9,
                category_id : "41",
            };
            refrush("/searchs/paper.html", search);    
           
        }else{
            var search = {
                // 不设置category_id会出错
                tpl_file    : 'paper',
                title       : value,
                pagesize    : 9,
                category_id : "41",
            };
            refrush("/searchs/paper.html", search);    
           
        }
    });
    function refrush(url, datas) {
        $.get(url, datas, function(data) {
            if (data) {
                $('#datalist').html(data);
            }
        });
    }
})(jQuery);  
</script>
