function getPage( obj ){
    var url = obj.attr('href');
    if( url == 'javascript:void(0);' ) {
        return false;
    }
    url = url + "?" + Math.random();
    // $.ajaxSetup({cache:false});
    $.get(url,{},function(data){
      $('#datalist').html(data);
      $('html,body').animate({scrollTop:parseInt($('#datalist').offset().top-230)},500);        
    })
}

function wapGetPage( obj ) {
    var url = obj.attr('href');
    if( url == 'javascript:void(0);' ) {
        return false;
    }
    url = url + "?" + Math.random();
    $('div.page-more')[0].remove();
    $.get( url , {} , function( data ) {
        $('#datalist').append( data );
    })
}
</script>

<script>
    $(function(){
        $('#btn_new').click(function(){
            var p = $('#text_se1').val();
            if( p == 0 || p == '' ) {
                my_alert("请输入跳转页数");
                return false;
            } else {
                var pagesize = $('.page-mod').attr('data-size');
                if( ( p * 1 ) <= ( pagesize * 1 ) ) {
                    var url = $('.page-mod a').eq(1).attr('href') + "?" + Math.random();
                    $.get( url , { p : p } , function( data ) {
                        $('#datalist').html( data );
                        $('html,body').animate({ scrollTop : parseInt( $('#datalist').offset().top - 230 ) } , 500 );
                    });
                }else{
                    my_alert('跳转页数超出!');
                }

            }

        });

    })
    function keydown( e , but ) {
        var currKey=0,e=e||event;
        var _this = $(but);

        if( e.keyCode == 13 )
        {
            _this.click();
            return false;
        }
    }
</script>

